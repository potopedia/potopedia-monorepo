# Server Configuration
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# Firebase Admin SDK
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# JWT Configuration
JWT_SECRET=change-this-secret
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=30d

# CORS
CORS_ORIGIN=http://localhost:3000

# AWS Configuration
# Option 1: Use project-specific credentials (recommended for separate accounts)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Option 2: Leave AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY blank to use AWS CLI credentials
# This will use credentials from ~/.aws/credentials
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# DynamoDB & S3
S3_MEDIA_BUCKET=photopedia-media-dev
DYNAMODB_TABLE_PREFIX=photopedia-dev

# Email
EMAIL_FROM=noreply@yourdomain.com

# Logging
LOG_LEVEL=info
